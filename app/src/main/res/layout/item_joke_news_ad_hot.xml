<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/item_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_news_tuiguang"
                android:gravity="center|left"
                android:maxLines="2"
                android:text=""
                android:textColor="#373737"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_news_tuiguang"
                android:layout_width="22dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/bg_tv_tuiguang1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="8sp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_news_layout_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/news_image_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <ImageView
                android:id="@+id/news_image_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <ImageView
                android:id="@+id/news_image_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text=""
            android:textColor="#cec5c5"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
