<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_hot_click"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_news_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_news_img"
                android:layout_toLeftOf="@+id/item_news_img"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="2"
                android:text=""
                android:textColor="#1f1f1f"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/item_news_img"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_news_tuiguang"
                    android:layout_width="26dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center|left"
                    android:layout_marginRight="4dp"
                    android:background="@mipmap/bg_tv_tuiguang1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="#e7dede"
                    android:textSize="9sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:lines="1"
                    android:text="鸿大"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="7dp"
                    android:lines="1"
                    android:text="新闻日期"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />
</LinearLayout>
