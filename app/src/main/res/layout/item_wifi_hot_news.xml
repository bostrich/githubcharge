<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_hot_click"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_news_tuiguang"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:text=""
            android:textColor="#1f1f1f"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/item_news_layout_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/news_image_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"></View>

            <ImageView
                android:id="@+id/news_image_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"></View>

            <ImageView
                android:id="@+id/news_image_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_news_tuiguang"
                android:layout_width="26dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center|left"
                android:layout_marginRight="4dp"
                android:background="@mipmap/bg_tv_tuiguang1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="8sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text=""
                android:textColor="#808080"
                android:textSize="12sp"
                android:lines="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="7dp"
                android:text=""
                android:textColor="#808080"
                android:lines="1"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />
</LinearLayout>
