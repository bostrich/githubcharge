<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_news_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_news_img"
                android:layout_toLeftOf="@+id/item_news_img"
                android:maxLines="2"
                android:text=""
                android:textColor="#373737"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/item_news_img"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_news_tuiguang"
                    android:layout_width="22dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/bg_tv_tuiguang1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="#e7dede"
                    android:textSize="9sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻日期"
                    android:textColor="#373737"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="5dp"
                    android:text="鸿大"
                    android:textColor="#cec5c5"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
